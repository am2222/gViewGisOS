<?xml version="1.0"?>
<configuration>

  <system.net>
    <connectionManagement>
      <add address="*" maxconnection="100"/>
    </connectionManagement>
  </system.net>
  
  <system.serviceModel>

    <services>
      <service name="gView.MapServer.Instance.MapServerInstanceType" behaviorConfiguration="MyServiceTypeBehaviors">
        <endpoint binding="basicHttpBinding" contract="gView.Framework.MapServer.IMapServerInstanceService"/>
        <endpoint contract="IMetadataExchange" binding="mexHttpBinding" address="mex"/>
      </service>
    </services>

    <bindings>
      <basicHttpBinding>
        <binding name="secure">
          <security mode="Transport">
            <transport clientCredentialType="Basic"/>
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>

    <behaviors>
      <serviceBehaviors>
        <behavior name="MyServiceTypeBehaviors">
          <!-- FÃ¼gen Sie der Dienstverhaltenskonfiguration folgendes Element hinzu. -->
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
  </system.serviceModel>
  
	<appSettings>
		<add key="log_requests" value="true"/>
		<add key="log_request_details" value="false"/>
		<add key="log_errors" value="true"/>
		<add key="log_archive" value="false"/>
	</appSettings>
<startup>
  <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
</startup>
</configuration>
